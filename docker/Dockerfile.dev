# Development Dockerfile with hot reload support
FROM eclipse-temurin:21-jdk-alpine

LABEL maintainer="B2B E-commerce Team"

# Install development tools
RUN apk add --no-cache \
    curl \
    wget \
    vim \
    net-tools \
    && rm -rf /var/cache/apk/*

# Create non-root user
RUN addgroup -g 1001 -S appuser && \
    adduser -S appuser -u 1001 -G appuser

WORKDIR /app

# Copy Maven wrapper and pom files for better caching
COPY mvnw* ./
COPY .mvn .mvn
COPY pom.xml ./

# Copy service-specific files
ARG SERVICE_NAME=inventory-service
COPY ${SERVICE_NAME}/pom.xml ./${SERVICE_NAME}/
COPY common/pom.xml ./common/

# Download dependencies
RUN chmod +x mvnw && \
    ./mvnw dependency:go-offline -B --no-transfer-progress

# Copy source code
COPY . .

# Change ownership
RUN chown -R appuser:appuser /app

USER appuser

# Expose debug port
EXPOSE 5005

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/actuator/health || exit 1

# Expose service port
EXPOSE 8080

# Run with hot reload support
ENTRYPOINT ["./mvnw", "spring-boot:run", "-pl", "${SERVICE_NAME}"]
